{
  "name": "reservation-system-backend",
  "version": "1.0.0",
  "description": "A scalable and real-time reservation system backend built with Node.js (Fastify, GraphQL, PostgreSQL, Redis, MongoDB, WebSocket, BullMQ).",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "migrate": "prisma migrate dev",
    "seed": "node prisma/seed.ts"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@apollo/server": "^4.12.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/csrf": "^8.0.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/rate-limit": "^10.2.2",
    "@fastify/sensible": "^6.0.3",
    "@fastify/static": "^8.1.1",
    "@fastify/websocket": "^11.0.2",
    "@prisma/client": "^6.5.0",
    "@trpc/server": "^11.0.3",
    "bullmq": "^5.48.0",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.2",
    "fastify-plugin": "^5.0.1",
    "graphql": "^16.10.0",
    "ioredis": "^5.6.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.6.1",
    "mongodb": "^6.15.0",
    "mysql2": "^3.14.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.5.0",
    "stripe": "^18.0.0",
    "twilio": "^5.5.2",
    "ws": "^8.18.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.14.0",
    "@types/ws": "^8.18.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.6",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  }
}
